<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="?android:attr/windowBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardElevation="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="4dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ExplosionField Demo"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tap any view to explode it"
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:layout_marginTop="4dp"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Explosion Styles Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Explosion Styles"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_marginBottom="12dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="8dp">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:padding="12dp">

                <Button
                    android:id="@+id/btnFountain"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:text="â›² Fountain"
                    android:backgroundTint="@color/btn_default"/>

                <Button
                    android:id="@+id/btnScatter"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:text="ðŸŒŸ Scatter"
                    android:backgroundTint="@color/btn_scatter"/>

                <Button
                    android:id="@+id/btnFall"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:text="ðŸ’§ Fall"
                    android:backgroundTint="@color/btn_implode"/>

                <Button
                    android:id="@+id/btnVortex"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:text="ðŸŒªï¸ Vortex"
                    android:backgroundTint="@color/btn_float"/>

            </GridLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Preset Configurations Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Preset Configurations"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_marginBottom="12dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <Button
                    android:id="@+id/btnGentle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸŒ¸ Gentle"
                    android:backgroundTint="@color/btn_gentle"
                    android:layout_marginBottom="8dp"/>

                <Button
                    android:id="@+id/btnAggressive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’¥ Aggressive"
                    android:backgroundTint="@color/btn_aggressive"
                    android:layout_marginBottom="8dp"/>

                <Button
                    android:id="@+id/btnDust"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="âœ¨ Dust"
                    android:backgroundTint="@color/btn_dust"
                    android:layout_marginBottom="8dp"/>

                <Button
                    android:id="@+id/btnChunky"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ§± Chunky"
                    android:backgroundTint="@color/btn_chunky"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Sample Views Section -->
        <TextView
